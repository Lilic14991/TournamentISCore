@model IEnumerable<TournamentsIS.Models.Clubs>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Create New</a>
</p>
<table class="table table-hover">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ClubName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ClubAddress)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ClubBudget)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ClubDesc)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Group)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Tournament)
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ClubName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ClubAddress)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ClubBudget) $
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ClubDesc)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Group.GroupName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Tournament.TournamentName)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.ClubId" class="btn btn-secondary">Edit</a>
                <a asp-action="Details" asp-route-id="@item.ClubId" class="btn btn-info">Details</a>
                <a asp-action="Delete" asp-route-id="@item.ClubId" class="btn btn-danger">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
