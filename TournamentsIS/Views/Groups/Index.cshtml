@model IEnumerable<TournamentsIS.Models.Groups>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Create New</a>
</p>
<table class="table table-hover">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.GroupName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.GroupLength)
            </th>

            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.GroupName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.GroupLength)
            </td>

            <td>
                <a asp-action="Edit" asp-route-id="@item.GroupId" class="btn btn-secondary">Edit</a>
                <a asp-action="Details" asp-route-id="@item.GroupId" class="btn btn-info">Details</a>
                <a asp-action="Delete" asp-route-id="@item.GroupId" class="btn btn-danger">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
