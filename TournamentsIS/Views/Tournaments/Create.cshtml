@model TournamentsIS.Models.Tournaments

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Create</h1>

<h4>Tournaments</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="TournamentName" class="control-label"></label>
                <input asp-for="TournamentName" class="form-control" />
                <span asp-validation-for="TournamentName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="StartDate" class="control-label"></label>
                <input asp-for="StartDate" id="startDate-error" class="form-control" />
                <span asp-validation-for="StartDate"  class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EndDate" class="control-label"></label>
                <input asp-for="EndDate" id="endDate-error" class="form-control" />
                <span asp-validation-for="EndDate"  class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TournamentLocation" class="control-label"></label>
                <input asp-for="TournamentLocation" class="form-control" />
                <span asp-validation-for="TournamentLocation" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" id="primary" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
