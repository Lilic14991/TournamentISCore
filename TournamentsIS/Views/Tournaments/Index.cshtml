@model IEnumerable<TournamentsIS.Models.Tournaments>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Create New</a>
</p>
<table class="table table-hover">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.TournamentName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.StartDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EndDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TournamentLocation)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.TournamentName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.StartDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EndDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TournamentLocation)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.TournamentId" class="btn btn-secondary">Edit</a> 
                <a asp-action="Details" asp-route-id="@item.TournamentId"class="btn btn-info">Details</a> 
                <a asp-action="Delete" asp-route-id="@item.TournamentId"class="btn btn-danger">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
