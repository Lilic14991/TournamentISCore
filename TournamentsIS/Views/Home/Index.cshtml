@model TournamentsIS.ViewModels.TournamentVewModel


@{
    ViewData["Title"] = "Home Page";
}

<table class=" table table-hover table-responsive-lg" id="clubs">
    <thead>
        <tr>
            <th> Clubs </th>
            <th> Tournament </th>
            <th> Group </th>
        </tr>
    </thead>
    <tbody>
        @foreach(var item in Model.Clubs)
        {
        <tr>
            <td>@item.ClubName</td>
            <td>@item.Tournament.TournamentName</td>
            <td>@item.Group.GroupName</td>
        </tr>
           
        }

    </tbody>


</table>


@section Scripts
{
<script>
    $(document).ready(function () {
        $('#clubs').DataTable();
        paging: true
    });
</script>
}
